@page
@model RasorSample.Pages.BBS.DeleteModel

@{
    ViewData["Title"] = "投稿の削除";
}

<h1>投稿の削除</h1>

<h3>以下の書き込みを削除します。よろしいでしょうか？</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Writing.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writing.Name)
        </dd>
        <dt class="col-sm-2">
            書き込み内容
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writing.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Writing.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Writing.ReleaseDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Writing.ID" />
        <input type="submit" value="削除" class="btn btn-danger" /> |
        <a asp-page="./Index">掲示板に戻る</a>
    </form>
</div>
